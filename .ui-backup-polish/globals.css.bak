:root {
  --bg-main: #0a0e1a;
  --bg-soft: #0f162d;
  --card-bg: rgba(255,255,255,0.045);
  --card-blur: blur(14px);
  --border-soft: rgba(214,179,106,0.18);
  --text-main: #f5f6f8;
  --text-muted: #a3acc2;
  --gold: #d6b36a;
  --shadow-soft: 0 20px 40px rgba(0,0,0,0.35);
  --shadow-ambient: inset 0 1px 0 rgba(255,255,255,0.04);
}

html, body {
  margin: 0;
  padding: 0;
  background:
    radial-gradient(1200px at 20% -10%, #1b244a, transparent 60%),
    radial-gradient(1000px at 90% 10%, #121b3a, transparent 55%),
    linear-gradient(#06080f, #06080f);
  color: var(--text-main);
  font-family: Inter, system-ui, sans-serif;
}

a {
  text-decoration: none;
  color: inherit;
}

/* ────────────────────────────────────────────
   ELITE LUXURY CARD SYSTEM
   ──────────────────────────────────────────── */

.card, .panel, .tile {
  background: linear-gradient(180deg, #232019, #1c1a16);
  border-radius: 20px;
  border: 1px solid rgba(214,180,106,0.22);
  box-shadow:
    0 22px 50px rgba(0,0,0,0.55),
    inset 0 1px 0 rgba(255,255,255,0.04);
  transition: transform 0.35s ease, box-shadow 0.35s ease;
}

@media (hover: hover) {
  .card:hover, .panel:hover, .tile:hover {
    transform: translateY(-6px);
    box-shadow:
      0 34px 80px rgba(0,0,0,0.65),
      inset 0 1px 0 rgba(255,255,255,0.06);
  }
}


header {
  backdrop-filter: blur(14px);
  background: linear-gradient(
    180deg,
    rgba(28,26,22,0.88),
    rgba(28,26,22,0.68)
  );
  border-bottom: 1px solid rgba(214,180,106,0.18);
}


@media (max-width: 768px) {
  h1 {
    font-size: 2.1rem;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .card, .panel, .tile {
    padding: 22px;
    margin-bottom: 18px;
  }

  button, .btn {
    min-height: 50px;
    width: 100%;
  }
}


* {
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
}

